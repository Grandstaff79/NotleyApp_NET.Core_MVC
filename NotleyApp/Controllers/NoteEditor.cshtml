
@model NotleyApp.Models.NoteModel
@{ 

    @if (Model != null && Model.ID != Guid.Empty)
    {
        ViewData["Title"] = "Edit Note";

    }
    else
    {
        ViewData["Title"] = "Create New Note";
    }

}


    <div class="note-editor">
        <div class="panel panel-default note-editor_panel">
            <div class="panel-heading note-editor_header">
                <h1 class="panel-title note-editor_panel-title">
                    @if (Model != null && Model.ID != Guid.Empty)
                    {
                        <span>Edit Your Note</span>
                    }
                    else
                    {
                        <span>Create New Note</span>
                    }
                </h1>
            </div>
            <form asp-action="NoteEditor" method="post">
                <div class="panel-body note-editor -editor_panel-body">

                    <div asp-validation-summary="All"></div>

                   <div class="form-group">
                        <label class="note-editor_input-label" asp-for="Subject">Subject</label>
                        <input class="form-control note-editor_subject-input" asp-for="Subject"/>
                    </div>

                <div class="form-group">
                    <label class="note-editor_input-label" asp-for="Detail">Your Note<</label>
                    <textarea class="form-control note-editor_detail-input" asp-for="Detail" id="TextArea" rows="12" cols="20"></textarea>
                </div>
       </div>

        <div class="panel-footer">
            <div class="note-editor_flex-container">
                @if (Model != null && Model.ID != Guid.Empty)
                {
                    <a class="btn btn-sm note-editor_button" asp-action="NoteDetail" asp-route-id="@Model.ID">Cancel</a>
                }
                else
                {
                    <a class="btn btn-sm_button" asp-action="Index">Cancel</a>

                }

                <button class="btn btn-sm note-editor_button" type="submit"></button>
                }
            </div>
            </div>
        

           </form>
        
      </div><
</div>

 
